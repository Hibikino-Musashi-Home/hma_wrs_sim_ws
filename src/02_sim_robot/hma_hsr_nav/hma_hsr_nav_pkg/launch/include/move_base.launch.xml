<launch>
  <!-- set topics -->
  <arg name="map_topic" default="map" />
  <arg name="cmd_vel_topic" default="hsrb/command_velocity" />
  <arg name="odom_topic" default="hsrb/odom" />

  <!-- planners, costmaps, etc -->
  <node pkg="move_base" type="move_base" name="hma_move_base" respawn="true">
    <rosparam file="$(find hma_hsr_nav_pkg)/io/configs/costmap_common.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find hma_hsr_nav_pkg)/io/configs/costmap_common.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find hma_hsr_nav_pkg)/io/configs/costmap_local.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find hma_hsr_nav_pkg)/io/configs/costmap_global.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find hma_hsr_nav_pkg)/io/configs/move_base.yaml" command="load" />
    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>
    <remap from="map" to="$(arg map_topic)" />

    <remap from="move_base" to="hma_move_base" />
  </node>

</launch>
